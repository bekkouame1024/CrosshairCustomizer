<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.21.4/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="horizontal" id="topControlContainer">
                    <children/>

                    <sizing>
                        <horizontal method="fixed">400</horizontal>
                        <vertical method="fixed">24</vertical>
                    </sizing>

                    <horizontal-alignment>left</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                </flow-layout>
                
                <flow-layout direction="vertical" id="mainContainer">
                    <children>
                        <flow-layout direction="vertical" id="gridContainer">
                            <children/>
                        </flow-layout>
                    </children>
                    
                    <sizing>
                        <horizontal method="fixed">400</horizontal>
                        <vertical method="fixed">250</vertical>
                    </sizing>

                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                </flow-layout>

                <flow-layout direction="horizontal" id="controlContainer">
                    <children>
                        <flow-layout direction="vertical" id="saveButton">
                            <children>
                                <texture texture="crosshaircustomizer:textures/gui/save.png" u="0" v="0" texture-height="64" texture-width="64" region-width="64" region-height="64">
                                    <tooltip-text>Save</tooltip-text>

                                    <sizing>
                                        <vertical method="fixed">18</vertical>
                                        <horizontal method="fixed">18</horizontal>
                                    </sizing>
                                </texture>
                            </children>

                            <surface>
                                <flat>#D0101010</flat>
                            </surface>

                            <sizing>
                                <vertical method="fixed">20</vertical>
                                <horizontal method="fixed">20</horizontal>
                            </sizing>

                            <margins>
                                <all>2</all>
                            </margins>

                            <vertical-alignment>center</vertical-alignment>
                            <horizontal-alignment>center</horizontal-alignment>
                        </flow-layout>

                        <flow-layout direction="vertical" id="cancelButton">
                            <children>
                                <texture texture="crosshaircustomizer:textures/gui/cancel.png" u="0" v="0" texture-height="64" texture-width="64" region-width="64" region-height="64">
                                    <tooltip-text>Cancel</tooltip-text>

                                    <sizing>
                                        <vertical method="fixed">18</vertical>
                                        <horizontal method="fixed">18</horizontal>
                                    </sizing>
                                </texture>
                            </children>

                            <surface>
                                <flat>#D0101010</flat>
                            </surface>

                            <sizing>
                                <vertical method="fixed">20</vertical>
                                <horizontal method="fixed">20</horizontal>
                            </sizing>

                            <margins>
                                <all>2</all>
                            </margins>

                            <vertical-alignment>center</vertical-alignment>
                            <horizontal-alignment>center</horizontal-alignment>
                        </flow-layout>
                    </children>

                    <sizing>
                        <horizontal method="fixed">400</horizontal>
                        <vertical method="fixed">24</vertical>
                    </sizing>

                    <horizontal-alignment>right</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                </flow-layout>
            </children>

            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>
        </flow-layout>
    </components>
</owo-ui>