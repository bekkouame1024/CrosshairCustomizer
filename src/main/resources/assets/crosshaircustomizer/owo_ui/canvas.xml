<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.21.4/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="horizontal" id="topControlContainer">
                    <children/>

                    <sizing>
                        <horizontal method="fixed">400</horizontal>
                        <vertical method="fixed">24</vertical>
                    </sizing>

                    <horizontal-alignment>left</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                </flow-layout>
                
                <flow-layout direction="vertical" id="mainContainer">
                    <children>
                        <flow-layout direction="vertical" id="gridContainer">
                            <children/>
                        </flow-layout>
                    </children>
                    
                    <sizing>
                        <horizontal method="fixed">400</horizontal>
                        <vertical method="fixed">250</vertical>
                    </sizing>

                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                </flow-layout>

                <flow-layout direction="horizontal" id="controlContainer">
                    <children/>

                    <sizing>
                        <horizontal method="fixed">400</horizontal>
                        <vertical method="fixed">24</vertical>
                    </sizing>

                    <horizontal-alignment>right</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                </flow-layout>
            </children>

            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>
        </flow-layout>
    </components>
</owo-ui>